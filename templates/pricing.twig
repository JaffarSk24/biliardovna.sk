<script>
document.addEventListener('DOMContentLoaded', function () {
  // Переключение вкладок (без вмешательства в попап)
  const tabs = document.querySelectorAll('.pricing-tab');
  const tables = document.querySelectorAll('.pricing-table-wrapper');

  function activate(serviceId) {
    tabs.forEach(t => t.classList.toggle('active', t.dataset.service === serviceId));
    tables.forEach(w => w.classList.toggle('active', w.dataset.service === serviceId));
  }

  tabs.forEach(tab => {
    tab.addEventListener('click', () => activate(tab.dataset.service));
  });
});
</script>

