
{% extends "admin/base_admin.twig" %}

{% block content %}
<div style="margin-bottom: 30px;">
    <h2>Add New Holiday</h2>
    <form method="POST" action="/admin/holidays/add" style="display: flex; gap: 10px; align-items: end;">
        <div class="form-group" style="flex: 1;">
            <label for="holiday_date">Date</label>
            <input type="date" name="holiday_date" id="holiday_date" required>
        </div>
        <div class="form-group" style="flex: 2;">
            <label for="name">Holiday Name</label>
            <input type="text" name="name" id="name" required>
        </div>
        <button type="submit" class="btn btn-primary">Add Holiday</button>
    </form>
</div>

<h2>Holiday List</h2>
<table class="data-table">
    <thead>
        <tr>
            <th>Date</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for holiday in holidays %}
        <tr>
            <td>{{ holiday.holiday_date }}</td>
            <td>{{ holiday.name }}</td>
            <td>
                <button onclick="deleteHoliday({{ holiday.id }})" class="btn btn-sm btn-danger">Delete</button>
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="3" style="text-align: center;">No holidays configured</td>
        </tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}

{% block scripts %}
<script>
function deleteHoliday(id) {
    if (!confirm('Are you sure you want to delete this holiday?')) return;
    
    const formData = new FormData();
    formData.append('holiday_id', id);
    
    fetch('/admin/holidays/delete', {
        method: 'POST',
        body: formData
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            location.reload();
        } else {
            alert('Error deleting holiday');
        }
    });
}
</script>
{% endblock %}
